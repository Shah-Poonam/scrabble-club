<div class="container">
  <h1 class="my-4 text-center text-lg-left">Games</h1>

  <%= link_to '+ Add Game', new_game_path, class: 'btn btn-primary btn-sm float-right m-1' %>

  <table class="table table-striped table-bordered">
    <thead>
      <tr>
        <th>Game Name</th>
        <th>Location</th>
        <th>Game date</th>
        <th>Participant 1 | Score </th>
        <th>Participant 2 | Score </th>
        <th>High Score</th>
        <th>Winner Name</th>
        <th>Action</th>
      </tr>
    </thead>

    <tbody>
      <% if @games.present? %>
        <%= render partial: 'game_data' %>
      <% else %>
        <tr>
          <td colspan="8">
            <p class="record_not text-center"> Record Not Found </p>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
